<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/global_bg_front"
    app:cardCornerRadius="2sp"
    app:cardElevation="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16sp"
    android:orientation="vertical">-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="sans-serif-light"
        android:text="@string/informasi" />

        <View
            android:id="@+id/aboutDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_card_intro"
            android:drawablePadding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />


        <TextView
            android:id="@+id/alamat_wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_card_address"
            android:drawablePadding="12dp"
            android:background="@drawable/selector_clickable_item_bg"
            android:textColor="@color/global_text_secondary"
            android:maxLines="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/telepon_wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_card_phone"
            android:drawablePadding="12dp"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/global_text_secondary"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:visibility="gone"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/global_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:visibility="gone"
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textColor="@color/global_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_card_distance"
            android:drawablePadding="12dp"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/global_text_secondary"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:visibility="gone"
            android:id="@+id/lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textColor="@color/global_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:visibility="gone"
            android:id="@+id/lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textColor="@color/global_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/global_color_primary_light"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_navigation"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/map_navigasi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:paddingLeft="6sp"
                android:paddingRight="16sp"
                android:background="@drawable/selector_clickable_item_bg"
                android:text="@string/rute_wisata"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
